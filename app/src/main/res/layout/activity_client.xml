<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/client_cardView"
    android:orientation="vertical"
    android:layout_margin="3dp"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    app:cardElevation="0dp"
    app:cardCornerRadius="3dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:elevation="4dp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/client_card_name"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:ellipsize="end"
            android:gravity="center_vertical|top"
            android:maxLines="1"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="12dp"
            app:layout_constraintBottom_toTopOf="@+id/client_card_phone"
            app:layout_constraintEnd_toStartOf="@+id/client_card_action"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Охотников Владислав Юрьевич"></TextView>

        <ImageView
            android:id="@+id/client_card_img_phone"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:src="@drawable/ic_local_phone_transparent_24px"
            android:layout_marginLeft="5dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/client_card_phone"
            app:layout_constraintTop_toTopOf="@+id/client_card_phone"></ImageView>

        <TextView
            android:id="@+id/client_card_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:fontFamily="@font/rubik_light"
            android:textSize="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/client_card_action"
            app:layout_constraintStart_toEndOf="@+id/client_card_img_phone"
            tools:text="7 (978) 123-45-56"></TextView>

        <TextView
            android:id="@+id/client_card_action"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:text="&#8942;"
            android:gravity="center"
            android:textAppearance="?android:textAppearanceLarge"
            android:textSize="20dp"
            android:layout_marginRight="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"></TextView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>