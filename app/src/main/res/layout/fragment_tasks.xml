<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tasklist_constraintlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context=".Fragments.FragmentTasks">

    <TextView
        android:id="@+id/txt_tasks_update_data"
        android:layout_width="match_parent"
        android:layout_height="14dp"
        android:textSize="10dp"
        android:fontFamily="@font/rubik_light"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_marginTop="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="ОБНОВЛЕНО 12.10.2019 15:25:23"></TextView>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_container_tasks"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rw_tasks"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:paddingTop="15dp"/>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <ImageView
            android:id="@+id/taskslist_img_empty"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="invisible"
            android:src="@drawable/coffeebreak"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/swipe_container_tasks"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_tasks_update_data"></ImageView>

    <TextView
        android:id="@+id/taskslist_txt_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:visibility="invisible"
        android:text="@string/tasklist_empty"
        android:gravity="center"
        android:textSize="20dp"
        android:textColor="@color/task_date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_tasks_update_data"></TextView>

    <Button
        android:id="@+id/taskslist_btn_update"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:text="Обновить"
        android:visibility="invisible"
        android:background="@drawable/button_rounded"
        android:textColor="@color/colorWhite"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"></Button>

</androidx.constraintlayout.widget.ConstraintLayout>